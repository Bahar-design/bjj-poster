# Example environment variables for apps/api
# Copy this file to .env.local and fill in your values

# =============================================================================
# Stripe Configuration
# =============================================================================

# Stripe API Key (required)
# Get from: https://dashboard.stripe.com/apikeys
# Use the "Secret key" (starts with sk_test_ for test mode, sk_live_ for production)
STRIPE_SECRET_KEY=sk_test_xxx

# Stripe Webhook Secret (required for webhook verification)
# Get from: https://dashboard.stripe.com/webhooks (after creating endpoint)
# Format: whsec_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe Price IDs (required)
# Create products and prices in: https://dashboard.stripe.com/products
# 1. Create a product (e.g., "Pro Plan", "Premium Plan")
# 2. Add recurring prices for each billing interval
# 3. Copy the price ID (format: price_xxxxxxxxxxxxxxxxxxxxx)
STRIPE_PRICE_ID_PRO_MONTHLY=price_xxx
STRIPE_PRICE_ID_PRO_ANNUAL=price_xxx
STRIPE_PRICE_ID_PREMIUM_MONTHLY=price_xxx
STRIPE_PRICE_ID_PREMIUM_ANNUAL=price_xxx

# =============================================================================
# Application Configuration
# =============================================================================

# App URL for Stripe redirect URLs (success/cancel)
# Must use HTTPS in production
NEXT_PUBLIC_APP_URL=http://localhost:3000

# DynamoDB table name (optional, defaults to 'bjj-poster-app')
DYNAMODB_TABLE_NAME=bjj-poster-app

# Node environment
NODE_ENV=development
